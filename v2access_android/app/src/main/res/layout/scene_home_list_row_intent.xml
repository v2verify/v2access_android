<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

    <ImageView
        tools:src="@mipmap/ic_launcher"
        android:id="@+id/company_icon"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="start|center_vertical"
        />

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!--<TextView-->
            <!--android:text="NickName(Device Info)"-->
            <!--android:id="@+id/label"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="16sp"-->
            <!--android:textColor="?attr/textColor"-->
            <!--android:textStyle="bold"/>-->

        <TextView
            tools:text="Office PC"
            android:id="@+id/device_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?attr/textColor"
            android:textStyle="bold"/>

        <TextView
            tools:text="tnarofsky@paxus.com"
            android:id="@+id/company_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/textColor"
            android:visibility="gone"
            android:textSize="16sp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        >

        <!--<TextView-->
            <!--tools:text="3 min"-->
            <!--android:id="@+id/expiration_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="?attr/textColor"-->
            <!--android:visibility="gone"-->
            <!--android:layout_gravity="top|center_horizontal"-->
            <!--android:textSize="12sp"/>-->

        <CheckBox
            android:id="@+id/include_intent"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:buttonTint="?attr/textColor" />

    </FrameLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>