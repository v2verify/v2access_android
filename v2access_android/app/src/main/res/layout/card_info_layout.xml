<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/gradientColor"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/scene_user_card_name_layout"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/cancel_button_background"
                android:hint="Card Holder's Name"
                android:textColorHint="@color/buttonBorder"
                app:met_underlineColor="?attr/textColor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/scene_user_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="textPersonName" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/scene_user_new_last_name_layout"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/cancel_button_background"
                android:hint="Card Number"
                android:textColorHint="@color/buttonBorder">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/scene_user_new_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="textPersonName" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/scene_user_new_user_name_layout"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/cancel_button_background"
                android:hint="Expiration Date"
                android:textColorHint="@color/buttonBorder">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/scene_user_new_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="date" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/scene_user_new_primary_phone_layout"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/cancel_button_background"
                android:hint="CVC"
                android:textColorHint="@color/buttonBorder">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/scene_user_new_primary_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/save_card_info"
                style="@style/SettingsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                />

        </LinearLayout>



</RelativeLayout>