<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.validvoice.voxidem.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/user_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_20">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/scene_user_new_first_name_layout"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/scene_user_new_first_name_hint"
                android:layout_margin="20dp"
                android:background="@drawable/cancel_button_background"
                android:textColorHint="@color/buttonBorder"
                app:met_underlineColor="?attr/textColor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/scene_user_new_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/scene_user_new_first_name_hint"
                    android:inputType="textPersonName" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/scene_user_new_last_name_layout"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/scene_user_new_last_name_hint"
                android:layout_margin="20dp"
                android:background="@drawable/cancel_button_background"
                android:textColorHint="@color/buttonBorder">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/scene_user_new_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/scene_user_new_last_name_hint"
                    android:inputType="textPersonName" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/scene_user_new_user_name_layout"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/scene_user_new_user_name_hint"
                android:background="@drawable/cancel_button_background"
                android:layout_margin="20dp"
                android:visibility="gone"
                android:textColorHint="@color/buttonBorder">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/scene_user_new_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/scene_user_new_user_name_hint"
                    android:inputType="textPersonName" />

            </android.support.design.widget.TextInputLayout>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/scene_user_new_language_selector"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:hint="@string/scene_user_new_language_hint"
                android:popupBackground="@drawable/cancel_button_background"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?attr/colorPrimary"
                app:met_textColor="?attr/textColor"
                app:met_textColorHint="?attr/textColor"
                app:met_underlineColor="?attr/textColor"
                tools:listitem="@android:layout/simple_dropdown_item_1line" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/scene_user_new_primary_phone_layout"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/cancel_button_background"
                android:hint="@string/scene_user_new_primary_phone_hint"
                android:textColorHint="@color/buttonBorder">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/scene_user_new_primary_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/scene_user_new_primary_phone_hint"
                    android:inputType="phone" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/scene_user_new_email_address_layout"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/scene_user_new_email_address_hint"
                android:layout_margin="20dp"
                android:background="@drawable/cancel_button_background"
                android:textColorHint="@color/buttonBorder">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/scene_user_new_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/scene_user_new_email_address_hint"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>


            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/scene_user_new_gender_selector"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:hint="@string/scene_user_new_gender_hint"
                android:popupBackground="@drawable/cancel_button_background"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?attr/colorPrimary"
                app:met_textColor="?attr/textColor"
                app:met_textColorHint="?attr/textColor"
                app:met_underlineColor="?attr/textColor"
                tools:listitem="@android:layout/simple_dropdown_item_1line" />


        </LinearLayout>

    </ScrollView>

    <Button
        style="@style/LoginButton"
        android:id="@+id/user_new_submit_button"
        android:text="@string/scene_user_new_submit"
        android:layout_marginRight="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginBottom="8dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/token_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_token_title"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="25sp"
                android:breakStrategy="simple"
                android:layout_margin="@dimen/margin_20"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_token_use"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_margin="@dimen/margin_20"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_token_create_intruction"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_margin="@dimen/margin_20"></TextView>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/scene_user_new_trainer_pin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20"
                android:background="@drawable/cancel_button_background"
                android:hint="@string/scene_user_new_trainer_pin_hint"
                android:padding="8dp"
                android:textColorHint="@color/buttonBorder">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/scene_user_new_trainer_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent_background"
                    android:inputType="number"
                    android:maxLength="6"
                    android:hint="@string/scene_user_new_trainer_pin_hint"
                    android:textColorHint="@color/buttonBorder" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
        </ScrollView>


        <Button
            android:id="@+id/user_new_begin_button"
            style="@style/LoginButton"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_marginBottom="8dp"
            android:text="@string/scene_user_new_begin" />


    </LinearLayout>

</LinearLayout>