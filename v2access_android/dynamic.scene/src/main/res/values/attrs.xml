<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SceneLayout">
        <attr name="headerView" format="reference" />
        <attr name="headerShadowedHeight" format="dimension" />
        <attr name="headerShadowDrawable" format="reference" />
        <attr name="footerView" format="reference" />
        <attr name="footerShadowedHeight" format="dimension" />
        <attr name="footerShadowDrawable" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="scrimColor" format="color|reference" />
        <attr name="maxScrimOpacity" format="float" />
