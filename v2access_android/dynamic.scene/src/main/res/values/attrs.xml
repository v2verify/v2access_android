    <declare-styleable name="ShadowedLayout">
        <attr name="topShadowedView" format="reference" />
        <attr name="topShadowedHeight" format="dimension" />
        <attr name="leftShadowedView" format="reference" />
        <attr name="leftShadowedHeight" format="dimension" />
        <attr name="rightShadowedView" format="reference" />
        <attr name="rightShadowedHeight" format="dimension" />
        <attr name="bottomShadowedView" format="reference" />
        <attr name="bottomShadowedHeight" format="dimension" />
